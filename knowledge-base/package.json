{
  "name": "@rad-engineer/knowledge-base",
  "version": "1.0.0",
  "description": "Knowledge Graph system for rad-engineer-v2 with VPS deployment, Ollama SLMs, and MCP server",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp/MCPServer.js",
    "start:webhook": "node dist/webhooks/github-webhook.js",
    "test": "bun test",
    "test:unit": "bun test test/unit",
    "test:integration": "bun test test/integration",
    "test:chaos": "bun test test/chaos",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rm -rf dist",
    "setup:vps": "node scripts/setup-vps.js",
    "deploy:vps": "node scripts/deploy-vps.js",
    "ingest:docs": "node scripts/ingest-sdk-docs.js",
    "migrate:learnings": "node scripts/migrate-learnings.js"
  },
  "keywords": [
    "knowledge-graph",
    "vector-database",
    "qdrant",
    "ollama",
    "mcp-server",
    "claude-sdk"
  ],
  "author": "rad-engineer",
  "license": "MIT",
  "dependencies": {
    "@qdrant/js-client-rest": "^1.12.0",
    "fastify": "^4.25.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/websocket": "^10.0.1",
    "ws": "^8.16.0",
    "ollama": "^0.5.0",
    "openai": "^4.26.0",
    "octokit": "^4.0.0",
    "zod": "^3.22.0",
    "hono": "^4.0.0",
    "yaml": "^2.3.4",
    "dotenv": "^16.4.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "axios": "^1.6.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3",
    "bun-types": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "config",
    "README.md"
  ]
}
